
{
  "compilerOptions": {
    "target": "ES2020",            // Use a modern version of JavaScript (adjust if needed)
    "module": "ESNext",            // Use ES Modules (instead of CommonJS, which is default in Node.js)
    "moduleResolution": "Node",    // Ensures compatibility with Node.js module resolution
    "outDir": "./dist",            // Compiled files will go to the "dist" folder
    "rootDir": "./TypeScript",            // All your source files are in the "src" folder
    "strict": true,                // Enable all strict type-checking options
    "esModuleInterop": true,       // Allow default imports from modules with no default export
    "skipLibCheck": true,          // Skip type-checking of declaration files (for faster build)
    "forceConsistentCasingInFileNames": true,
    "declaration": true,           // Generate .d.ts files for type definitions
    "resolveJsonModule": true,     // Allow importing .json files
    "allowJs": false,              // Do not allow JS files, only TS
    "isolatedModules": true,       // Useful for certain tools like Babel or Webpack
    "noEmitOnError": true          // Prevent emitting JavaScript files if there are type errors
  },
  "include": [
    "TypeScript/**/*.ts"                  // Include all .ts files in the src directory
  ],
  "exclude": [
    "node_modules"                 // Exclude node_modules directory from compilation
  ]
}

